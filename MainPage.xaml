<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WifiHome.MainPage"
             Title="Wifi Home - تتبع الاستهلاك"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- شاشة الترحيب وعرض الإحصاءات -->
            <Frame BackgroundColor="{DynamicResource Primary}" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="مرحباً بك في Wifi Home" 
                           TextColor="White" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />

                    <Label Text="{Binding StatusMessage}" 
                           TextColor="White" 
                           FontSize="14" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- الأزرار الرئيسية -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*" RowSpacing="15" ColumnSpacing="15">

                <!-- زر بدء/إيقاف التسجيل -->
                <Button x:Name="StartStopButton" 
                        Text="بدء التسجيل" 
                        Clicked="OnStartStopClicked"
                        BackgroundColor="{DynamicResource Secondary}"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />

                <!-- زر عرض الاستهلاك -->
                <Button Text="عرض الاستهلاك" 
                        Clicked="OnShowUsageClicked"
                        BackgroundColor="{DynamicResource Tertiary}"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Grid.Row="1" Grid.Column="0" />

                <!-- زر إضافة مستخدم -->
                <Button Text="إضافة مستخدم" 
                        Clicked="OnAddUserClicked"
                        BackgroundColor="{DynamicResource Tertiary}"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Grid.Row="1" Grid.Column="1" />

                <!-- زر مسح البيانات -->
                <Button Text="مسح البيانات" 
                        Clicked="OnWipeDataClicked"
                        BackgroundColor="{DynamicResource Error}"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Grid.Row="2" Grid.Column="0" />

                <!-- زر وضع المضيف -->
                <Button Text="وضع المضيف" 
                        Clicked="OnHostModeClicked"
                        BackgroundColor="{DynamicResource Success}"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="14"
                        Grid.Row="2" Grid.Column="1" />
            </Grid>

            <!-- منطقة عرض الإحصاءات -->
            <Frame IsVisible="{Binding IsStatsVisible}" 
                   BackgroundColor="{DynamicResource Surface}" 
                   Padding="15" 
                   CornerRadius="10">
                <VerticalStackLayout Spacing="8">
                    <Label Text="إحصاءات الاستهلاك" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />

                    <Label Text="{Binding DeviceName}" 
                           FontSize="14" 
                           HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*" RowSpacing="5">
                        <Label Text="التحميل:" Grid.Row="0" Grid.Column="0" />
                        <Label Text="{Binding DownloadText}" Grid.Row="0" Grid.Column="1" />

                        <Label Text="الترفيع:" Grid.Row="1" Grid.Column="0" />
                        <Label Text="{Binding UploadText}" Grid.Row="1" Grid.Column="1" />

                        <Label Text="المجموع:" Grid.Row="2" Grid.Column="0" FontAttributes="Bold" />
                        <Label Text="{Binding TotalText}" Grid.Row="2" Grid.Column="1" FontAttributes="Bold" />
                    </Grid>

                    <Label Text="{Binding LastUpdateText}" 
                           FontSize="12" 
                           TextColor="Gray" 
                           HorizontalOptions="Center" 
                           Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>